    :@hero="hero"
    :@title="title"
    :@subhead="subhead"
    :@author="$data.authors[author]"
    :@date="$data.page.date"
  ></article-header>

  <div @raw="content" webc:nokeep></div>

  <footer>
    <section>
      <h2>You Might Enjoyâ€¦</h2>

      <article-list
        :@articles="collections.article.filter((article) => article.url !== page.url)"
