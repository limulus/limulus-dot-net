  }

  :host section.engagement {
    flex-shrink: 0;
    align-self: flex-start;
  }

  :host ul {
    margin: 0;
    padding: 0;
  }

  :host nav ul {
    display: flex;
    flex-wrap: wrap;
  }

  :host li {
    display: block;
    text-wrap: nowrap;
    white-space: nowrap;
  }

  :host nav,
  :host section {
    display: flex;
    align-items: center;
  }

  :host nav li + li::after {
    content: '/';
    margin: 0 0.5em;
  }

  :host nav svg {
